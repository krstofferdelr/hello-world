# variable declaration
firstName = "Kristoffer"
lastName = "Del Rosario"
age = 23

#arithmetic operations

num1 = 5
num2 = 10

#add
num1+num2

#sub
num1-num2

#div
num1/num2

#multi
num1*num2

#modulo(remainder)
num1%num2

#multiple declaration
name,age = "kristoffer", 23

#placeholders
#$s String, $d int

sentence = "%s is %d years old"

print(sentence%("Kristoffer", 23))
